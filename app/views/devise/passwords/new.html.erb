<h1>Forgot your password?</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-group') do |f| %>
  <div class="form-group row">
    <%= f.label 'Email', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10 form-control-label">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>
  <%= devise_error_messages! %>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary-outline' %>
    </div>
  </div>
<% end %>

