<h1>Login</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row">
    <%= f.label 'Email', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10 form-control-label">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label 'Password', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <% end -%>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Login', class: 'btn btn-success-outline' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <p class="links"><%= render 'devise/shared/links' %></p>
    </div>
  </div>
<% end %>
