<a name="pos1"/>
<div id="articles">
  <div id="month"><a name="pos1"/>
    <div id="prev"><a name="pos1"/>
      <%=
        link_to image_tag(
          'prev.png',
          height: 40,
          margin: -10,
          onmouseover: "this.src='#{asset_path('prev_hover.png')}'",
          onmouseout: "this.src='#{asset_path('prev.png')}'"
        ),
        date: @date.prev_month,
        anchor: "?#pos1"
      %>
    </div>
    <div id="current">
      <%= @date.strftime("%B %Y") %>
    </div>
    <div id="next">
      <%= link_to image_tag(
          'next.png',
          height: 40,
          margin: -10,
          onmouseover: "this.src='#{asset_path('next_hover.png')}'",
          onmouseout: "this.src='#{asset_path('next.png')}'"
        ),
        date: @date.next_month,
        anchor: "?#pos1"
      %>
    </div>
  </div>

  <div style="clear: both;">
     <%= calendar @date do |date| %>
      <% if @date.month == date.month %>
        <% if Date.today < date %>
          <a href="#" onclick="getCourses(<%= date.to_json %>)">
            <%= date.day %>
          </a>
      <% else %>
        <%= date.day %>
      <% end %>
    <% end %>
  <% end %>
  </div>
  <div id="courseList"></div>
</div>

<%= month_calendar do |date| %>
  <% if date >= Date.today && date <= Date.today + Course::MAX_DAYS %>
  <%= label(:date, date.to_s) do %>
    <%= link_to("#{date.day}", courses_path(date: date), onclick: "setDate(#{date.to_json})", remote: true) %>
  <% end %>
  <% else %>
  <%= "#{date.day}" %>
  <% end %>
<% end %>
<%= f.hidden_field(:date, value: Date.today) %>

