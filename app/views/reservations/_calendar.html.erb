<a name="pos1"/>
<div id="articles">
  <div id="month"><a name="pos1"/>
    <div id="prev"><a name="pos1"/>
      <%=
        link_to image_tag(
          'prev.png',
          height: 40,
          margin: -10,
          onmouseover: "this.src='#{asset_path('prev_hover.png')}'",
          onmouseout: "this.src='#{asset_path('prev.png')}'"
        ),
        date: @date.prev_month,
        anchor: "?#pos1"
      %>
    </div>
    <div id="current">
      <%= @date.strftime("%B %Y") %>
    </div>
    <div id="next">
      <%= link_to image_tag(
          'next.png',
          height: 40,
          margin: -10,
          onmouseover: "this.src='#{asset_path('next_hover.png')}'",
          onmouseout: "this.src='#{asset_path('next.png')}'"
        ),
        date: @date.next_month,
        anchor: "?#pos1"
      %>
    </div>
  </div>
  <div style="clear: both;">
    <%= calendar @date do |date| %>
      <% if @date.month == date.month %>
        <% if Date.today < date  %>
          <a onclick="getDate(<%= date.year %>, <%= date.month %>, <%= date.day %>)
            $('.active').css('background','#66201a');
            $(this).parent().css('background','#450c08');">
            <%= date.day %></a>
        <%= date.day %>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
