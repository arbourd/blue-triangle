<br>
<h1>My Bookings</h1>
<br>
<table align="center" width="700" cellspacing="0" cellpadding="0">
  <thead>
    <tr id="tblHead">
      <th>Date</th>
      <th>Course</th>
      <th>Booked By</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
     <% if reservation.member_id == current_member.id %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.course.name %></td>
        <td><%= reservation.member.full_name %></td>
        <% if reservation.status == "pending" %>
        <td class="pending"><b><%= reservation.status %></b></td>
        <% elsif reservation.status == "confirmed" %>
        <td class="confirmed"><b><%= reservation.status %></b></td>
        <% else %>
        <td class="cancelled"><b><%= reservation.status %></b></td>
        <% end %>
        <td><%= link_to 'Details', reservation %></td>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>


