<h1>Book a Tee-Time</h1>
<%= form_for(@reservation) do |f| %>
  <h3>Calendar</h3>
  <p>Select a date to book a tee-time.</p>
  <div id="calendar">
    <%= render partial: 'calendar' %>
  </div>

  <h3>Courses</h3>
  <p>Select a course</p>
  <table id="courses" class="table table-sm table-hover courses"></table>

  <h3>Members</h3>
  <p>Add additional members</p>
  <div class="row">
    <div class="col-xs-11">
      <%= text_field_tag 'member_number',  nil, placeholder: 'Member number ie. 1234', class: 'form-control' %>
    </div>
    <div class="col-xs-1">
      <%= link_to '+', '#!', class: 'btn btn-success-outline', onclick: 'makeUserRequest()' %>
    </div>
  </div>
  <div id="members-error" style="margin-top: 1rem;" class="text-danger"></div>
  <table class="table" style="margin-top: 1rem;">
    <thead>
      <tr>
        <th>Name</th>
        <th class="text-xs-center">Number</th>
        <th class="text-xs-center">Remove</th>
      </tr>
    </thead>
    <tbody id="members">
    </tbody>
  </table>

  <div class="row">
    <div class="col-xs-6 form-submit">
      <%= link_to 'Cancel', reservations_path, class: 'btn btn-secondary-outline btn-lg' %>
    </div>
    <div class="col-xs-6 form-submit">
      <%= f.submit 'Book', class: 'btn btn-primary-outline btn-lg' %>
    </div>
  </div>
<% end %>
