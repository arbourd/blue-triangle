<%= form_for(@reservation) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-xl-6">
        <table style="margin-left: 20px;margin-top: 20px;">
          <tr class="field">
            <td><%= f.label :course_id %></td>
            <td><%= f.collection_select :course_id, Course.active.by_name, :id, :name, include_blank: 'Pick a course...' %></td>
          </tr>
          <tr class="field">
            <td><%= f.label :date %></td>
            <td><%= f.text_field :date, :readonly => true, placeholder: 'Pick from calender' %></td>
          </tr>
          <tr class="actions">
            <td colspan="2"><%= f.submit %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
<% end %>
