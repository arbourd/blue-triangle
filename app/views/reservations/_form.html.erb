<%= form_for(@reservation) do |f| %>
  <% if @reservation.errors.any? %>
    <%= render partial: 'errors/error', object: @reservation %>
  <% end %>

  <div id="container" style="width:800px; margin:0 auto;">
    <%= render partial: 'reservations/calendar', object: @reservation %>
    <div id="left" style="float:left; width:400px; height:400px;" >
      <table style="margin-left: 20px;margin-top: 20px;">
        <tr class="field">
          <td><%= f.label :course_id %></td>
          <td><%= f.collection_select :course_id, Course.active.by_name, :id, :name, include_blank: "Pick a course..." %></td>
        </tr>
        <tr class="field">
          <td><%= f.label :date %></td>
          <td><%= f.text_field :date, :readonly => true, :id => "selDate", :placeholder => "Pick from calender" %></td>
        </tr>
        <tr class="actions">
          <td colspan="2"><%= f.submit :class=>"btype1" %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
