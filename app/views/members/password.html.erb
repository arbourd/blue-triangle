<h1>Change Password</h1>
<%= form_for(@member, method: :put, url: {:action => 'change_password'}) do |f| %>
  <div class="form-group row">
    <%= f.label 'Current password', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10 form-control-label">
      <%= f.password_field :current_password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label 'New password', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label 'Confirmation', class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Change Password', class: 'btn btn-primary-outline' %>
    </div>
  </div>
<% end %>
