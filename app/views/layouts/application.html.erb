<!DOCTYPE html>
<html>
<head>
  <title>Executive Golf - Club EG</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= image_tag 'eg_logo.gif'%>
  <hr/>
  <div id="cssmenu">
    <ul>
      <% if member_signed_in? %>
        <li><%= link_to 'Book Spot', new_reservation_path %></li>
        <li><%= link_to 'My Booking', reservations_path %></li>
        <li><%= link_to 'Edit Profile', nil %></li>
        <li class="last"><%= link_to 'Logout', destroy_member_session_path, method: :delete %></li>
        <li class="last"><%= link_to 'Change Password', edit_member_password_path %></li>
      <% else %>
        <li><%= link_to 'Executive Golf', 'http://executivegolf.ca' %></li>
        <li class="last"><%= link_to 'Login', new_member_session_path %></li>
      <% end %>
    </ul>
  </div>
  <div id="content">
    <%= yield %>
  </div>
</body>
</html>
